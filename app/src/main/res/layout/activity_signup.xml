<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootlLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@color/login_background"
    android:focusableInTouchMode="true"
    tools:context=".view.LoginActivity">


    <LinearLayout
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/signUpIv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/mostly_cloudy">
        </ImageView>

        <TextView
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WEATHER FORECAST"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:gravity="center">
        </TextView>

    </LinearLayout>


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
          android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/nameEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="name"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:backgroundTint="@color/text_color"
                android:focusableInTouchMode="true"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true">
            </EditText>
            <ImageView
                android:id="@+id/nameIconIv"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="12dp"
                android:tint="@color/text_color"
                android:src="@drawable/user"></ImageView>



        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/emailEt"
                android:hint="e-mail"
                android:lines="1"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:backgroundTint="@color/text_color"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                android:layout_height="wrap_content">
            </EditText>

            <ImageView
                android:id="@+id/emailIconIv"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"

                android:layout_marginRight="12dp"
                android:src="@drawable/mail"
                android:tint="@color/text_color"></ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/passwordEt"
                android:hint="password"
                android:lines="1"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:backgroundTint="@color/text_color"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:focusableInTouchMode="true"
                android:inputType="textPassword"
                android:singleLine="true"
                android:layout_height="wrap_content">
            </EditText>

            <ImageView
                android:id="@+id/passwordIconIv"
                android:tint="@color/text_color"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/key"></ImageView>
        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/confirmPasswordEt"
                android:hint="confirm password"
                android:lines="1"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:backgroundTint="@color/text_color"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:focusableInTouchMode="true"
                android:inputType="textPassword"
                android:singleLine="true"
                android:layout_height="wrap_content">
            </EditText>

            <ImageView
                android:id="@+id/confirmPasswordIconIv"
                android:tint="@color/text_color"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/key"></ImageView>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/errorLay"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"

            >

            <TextView
                android:id="@+id/authErrorTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="THIS IS THE ERROR LAYOUT"
                android:gravity="center"
                android:textColor="@color/red_color"
                ></TextView>




        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <ImageView
                android:id="@+id/fab"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/progressbar_bg"
                />
            <ProgressBar

                android:id="@+id/progressBar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminateTint="@color/text_color"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/signUpButtonTv"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:padding="8dp"
                android:textColor="@color/text_color"
                android:background="@color/button_color"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="SIGN UP ">
            </TextView>
        </RelativeLayout>







    </LinearLayout>
</ScrollView>
































</LinearLayout>